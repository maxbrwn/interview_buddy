

<div class="feedback-card my-4 mx-5 ">
  <div>
    <h3 class="text-center p-2 mt-1">Your overall feedback</h3>
  </div>

<%= @interview.questions.count %>
<%= @interview.answers.count %>
<% @answer_array.each.with_index do |answer, index|%>
  <div class="feedback">
    <div class="p-1">
      <div class = "d-flex justify-content-between">
        <h5 class="m-2 font-weight-bold fs-4">Question</h5>
        <%= link_to question_bookmarks_path( @questions[index], interview_id: @interview.id), data: {turbo_method: :post} do %>
          <i class="fa-regular fa-bookmark fs-3 m-2"></i>
        <% end %>
      </div>
      <p class="mt-3"><%= @question_array[index]%></p>
    </div>
  <hr>
    <div class="p-1">
      <h5 class="font-weight-bold fs-4">Answer</h5>
      <p class="mt-3"><%= @answer_array[index]%></p>
    </div>
  <hr>
    <div class="p-1">
      <h5 class="font-weight-bold fs-4">Feedback</h5>
      <p class="mt-3"><%= @answer_feedback_array[index]%></p>
    </div>
  </div>
<%end%>
  <div class="feedback">
    <div class="p-1">
        <h5 class="font-weight-bold fs-4">Summary</h5>
        <p class="mt-3"><%= @interview.feedback%></p>
    </div>
  </div>
</div>
