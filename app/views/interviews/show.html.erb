<div class="containter  mx-5 mt-3">
    <% question_array = @interview_questions.map do |interview_question| %>
      <% interview_question.question.content %>
    <% end %>

<h3 class="mb-3 text-end"> Questions <%=session[:current_index] + 1%> / <%=question_array.size%></h3>
  <div class="question-display mt-2">
    <h4>
<%= question_array[session[:current_index]] %>
    </h4>
  </div>

<%# <%if session[:current_index] < question_array.size%>

<div class="input-card mt-4">
  <%= simple_form_for [@interview_questions[session[:current_index]], @answer] do |a| %>
    <%= a.input :content, label: false, input_html: { class: 'answer-input fs-4 text-muted opacity-50', placeholder: 'Put your answer right here. Please keep it as short and understandible as possible.' } %>
  <div data-controller= "disable-buttons" class= "" data-disable-buttons-target= "disable" data-disable-buttons-current-index-value="<%=session[:current_index]%>" data-disable-buttons-array-size-value="<%=question_array.size - 1%>">
    <%= a.button :submit, class: "btn btn-primary" %>
  <% end %>

    <%= button_to "Stop", feedback_interview_path(@interview), method: :get, class: "btn btn-primary my-1 fs-5"%>
    <%= button_to "Skip", feedback_interview_path(@interview), method: :get, class: "btn btn-primary my-1 fs-5" %>
  </div>

</div>
<%# <% elsif session[:current_index] == question_array.size%>
<%# <% end %>

<div data-controller= "interview-buttons" class = "d-none mt-3" data-interview-buttons-target= "enable" data-interview-buttons-current-index-value="<%=session[:current_index]%>" data-interview-buttons-array-size-value="<%=question_array.size - 1%>">
  <p class="fs-5"><%="Thank you for your commitment!"%></p>
  <%= button_to "Submit", feedback_interview_path(@interview), method: :get, class: "btn btn-primary my-1 fs-5"%>
</div>
</div>
