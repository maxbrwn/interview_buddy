<%= render "shared/navbar" %>
<div class="container">
  <div class="row">
  <div class="col-md-6">
    <div class="feedback-header">
      <h1>My Interview Feedbacks</h1>
      <div class="feedback">
        <% @user_interviews.each do |interview| %>
        <%# <h4><%= text_field_tag "interview_role_#{interview.id}", '', class: "editable-role", placeholder: "Type here..."%></h4>
          <a href="<%= feedback_interview_path(interview)%>">
            <div class="feedback-box">
              <h2><%= interview.role %></h2>
              <h3>
              <% interview.language.split(", ").each do |language| %>
                  <% if language.downcase == "html" %>
                    <i class="fa-solid fa-code" style="color: #f16529;"></i> HTML
                  <% elsif language.downcase == "css" %>
                    <i class="fa-brands fa-css3" style="color: #3B00DB;"></i> CSS
                  <% elsif language.downcase == "javascript" %>
                    <i class="fa-brands fa-js" style="color: #808000;"></i> JavaScript
                  <% elsif language.downcase == "ruby" %>
                    <i class="fa-solid fa-gem" style="color: #CE2029;"></i> Ruby
                  <% elsif language.downcase == "python" %>
                    <i class="fa-brands fa-python" style="color: #FFC40C;"></i> Python
                  <% elsif language.downcase == "php" %>
                    <i class="fa-brands fa-php" style="color: #DF00FF;"></i> PHP
                  <% elsif language.downcase == "react" %>
                    <i class="fa-brands fa-react" style="color: #0070FF;"></i> React
                  <% elsif language.downcase == "angular" %>
                    <i class="fa-brands fa-angular" style="color: #CE2029;"></i> Angular
                  <% elsif language.downcase == "rails" %>
                    <i class="fa-solid fa-train-track" style="color: #f16529;"></i> Rails
                  <% else %>
                    No specific symbol for <%= interview.language %>
                  <% end %>
              <% end %>
              </h3>
              <h3><i class="fa-solid fa-clipboard-question" style="color: blue;"></i> Number of questions: <%= interview.number_of_questions%></h3>
              <p>&#128197; <%= (interview.created_at + 1.hour).strftime("%B %d, %Y %H:%M") %></p>
              <%# Render feedback content here %>
            </div>
          </a>
        <% end %>
      </div>
    </div>
  </div>

  <div class="col-md-6">
    <div class ="bookmark-header">
      <h1>My Bookmark questions</h1>
        <div class="bookmark">
          <% @bookmarks.each do |b| %>
            <div class="bookmark-box">
              <%= b.question.content %>
              <%= render partial: 'bookmarks/bookmark', locals:  {bookmark: b,question: b.question } %>
              <hr>
            </div>
          <% end %>
        </div>
    </div>
  </div>
</div>
</div>
<%= render "shared/footer"%>
