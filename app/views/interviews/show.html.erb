
<% question_array = @interview_questions.map do |interview_question| %>
<% interview_question.question.content %>
<% end %>


<%if session[:current_index] < question_array.size%>
  <%= question_array[session[:current_index]] %>
    <%= simple_form_for [@interview_questions[session[:current_index]], @answer] do |a| %>
      <%= a.input :content %>
      <%= a.button :submit, class: "btn btn-primary" %>
    <% end %>
<% elsif session[:current_index] == question_array.size%>
  <%= "Thank you for your commitment!" %>
  <%= link_to "Submit", feedback_interview_path(@interview)%>
<% end %>
